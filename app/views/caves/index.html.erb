<h1>Listing caves</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Cost</th>
    <th>Food</th>
    <th>Hours</th>
    <th>Info</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @caves.each do |cafe| %>
  <tr>
    <td><%= cafe.name %></td>
    <td><%= cafe.address %></td>
    <td><%= cafe.cost %></td>
    <td><%= cafe.food %></td>
    <td><%= cafe.hours %></td>
    <td><%= cafe.info %></td>
    <td><%= link_to 'Show', cafe %></td>
    <td><%= link_to 'Edit', edit_cafe_path(cafe) %></td>
    <td><%= link_to 'Destroy', cafe, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

